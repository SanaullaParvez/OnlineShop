.page-header
  %h1 Listing posts


%table.table.table-striped
  %tr
    %th Title
    %th Description
    %th Category
    %th Price
    %th

  - @posts.each do |post|
    %tr
      %td= post.title
      %td= post.description
      %td
        - post.categories.each do |x|
          = x.title
      %td= post.price
      %td
        %p= link_to 'Show', post, :class => "btn btn-info btn-xs"
        - if can? :update, post


          %p= link_to 'Edit', edit_post_path(post), :class => "btn btn-default btn-xs"
        %p= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger btn-xs"

%br

= link_to 'New Post', new_post_path, :class => "btn btn-primary"
