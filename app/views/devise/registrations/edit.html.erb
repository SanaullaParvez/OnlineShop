<div class="page-header"><h2>Edit <%= resource_name.to_s.humanize %></h2></div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => "form", :class => "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group"><%= f.label :email,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"> <%= f.email_field :email,:autofocus => true, :class => 'form-control', :disabled => true %></div></div>

    <div class="form-group"><%= f.label :name,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control', placeholder: "Enter your Full Name" %></div></div>
    <div class="form-group"><%= f.label :address,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :address, :class => 'form-control',rows: 3, placeholder: "Enter your Full Address" %></div></div>
    <div class="form-group"><%= f.label :country,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.collection_select(:country_id, Country.all, :id, :name, {:include_blank => 'Please select a Country'}, {:class => 'form-control'})%></div></div>
    <div class="form-group"><%= f.label :city,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.collection_select(:city_id, City.all, :id, :name, {:include_blank => 'Please select a City'}, {:class => 'form-control'}) %></div></div>
    <div class="form-group"><%= f.label :area_code,:class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :area_code,:class => 'form-control', placeholder: "Enter your Area Code" %></div></div>
    <div class="form-group"><%= f.label :phone,:class => 'col-sm-2 control-label' %>
      <%= f.hidden_field :phone, :class => 'form-control', placeholder: "Enter your Phone Number" %>
      <div class="col-sm-10"><%= f.text_field :phone, :class => 'form-control', placeholder: "Enter your Phone Number" %></div></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div></div>
    <% end %>

    <div class="form-group"><%= f.label :password, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.password_field :password, :autocomplete => "off", :class => 'form-control' %><i>(leave blank if you don't want to change it)</i></div></div>

    <div class="form-group"><%= f.label :password_confirmation, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.password_field :password_confirmation, :class => 'form-control' %></div> </div>

    <div class="form-group"><%= f.label :current_password, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.password_field :current_password, :class => 'form-control' %><i>(we need your current password to confirm your changes)</i></div> </div>

    <div class="form-group"><div class="col-sm-offset-2 col-sm-10"> <%= f.submit "Update", :class => "btn btn-primary" %></div></div>
<% end %>

<div class="page-header"><h3>Cancel my account</h3></div>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %></p>

<div class="form-group"><%= link_to "Back", :back, :class => "btn btn-default" %></div>
