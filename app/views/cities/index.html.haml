%h1 Listing cities

%table.table.table-striped
  %tr
    %th Name
    %th Iso code
    %th Country
    %th
    %th
    %th

  - @cities.each do |city|
    %tr
      %td= city.name
      %td= city.iso_code
      %td= city.country_id
      %td= link_to 'Show', city, :class => "btn btn-info btn-xs"
      %td= link_to 'Edit', edit_city_path(city), :class => "btn btn-default btn-xs"
      %td= link_to 'Destroy', city, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger btn-xs"

%br

= link_to 'New city', new_city_path, :class => "btn btn-primary"

